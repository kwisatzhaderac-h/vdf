set number
set relativenumber
set ruler
set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey
set tabstop=2
set shiftwidth=2
set laststatus=2
set statusline=%f
set visualbell
set autoindent
set is
set hlsearch
hi Search guibg=LightBlue

" vim-markdown settings
set conceallevel=2

" Set themes
packadd! dracula
syntax enable
colorscheme dracula
